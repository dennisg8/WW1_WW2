--Data from Centre europ√©en Robert Schuman WW1 casualties website.
CREATE TABLE ww1 (
    id              INTEGER PRIMARY KEY AUTOINCREMENT,
    country         TEXT,
    population      NUMERIC,
    military_deaths NUMERIC,
    civilian_deaths NUMERIC,
    total_deaths    NUMERIC
);

